/* pages/detail/index.wxss */

.header{
  text-align: center;
}
.main{
  padding: 40rpx;
}
.main_title{
  font-size: 36rpx;
  color: #000000;
}
.main_sub, .footer_item{
  font-size: 30rpx;
  color: #999999;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main_content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-right: 10rpx;
}
.main_text{
  font-size: 30rpx;
  color: #F0422C;
  margin-top: 20rpx;
}
.main_img{
  width: 40rpx;
  height: 40rpx;
}
.footer{
  padding: 40rpx;
}
.footer_content{
  color: #000000;
}
.title{
  font-size: 40rpx;
}
.footer_item{
  line-height: 1.8;
}